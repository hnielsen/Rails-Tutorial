<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render :partial => 'shared/stylesheets' %>
  </head>
  <body>
    <div class='container'>
      <%= render :partial => 'shared/header' %>
      <section class='round'>
      <% flash.each do |key, value| %> 
        <div class="flash <%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
      </section>
      <%= render :partial => 'shared/footer' %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
